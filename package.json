{
  "name": "bulma-pageloader",
  "version": "1.0.1",
  "description": "Display a page-loader to inform user that content is loading, in different colors. ",
  "main": "dist/css/bulma-pageloader.min.css",
  "style": "dist/css/bulma-pageloader.min.css",
  "sass": "src/sass/index.scss",
  "scripts": {
    "build": "sass --style=compressed ./src/sass/index.scss ./dist/css/bulma-pageloader.min.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ymkapuriya/bulma-pageloader.git"
  },
  "keywords": [
    "Bulma",
    "bulma",
    "bulma.io",
    "extensions"
  ],
  "author": "Yogesh Kapuriya <ymkapuriya@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ymkapuriya/bulma-pageloader/issues"
  },
  "homepage": "https://github.com/ymkapuriya/bulma-pageloader#readme",
  "devDependencies": {
    "bulma": "^1.0.1",
    "sass": "^1.77.6"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "dist/**",
    "src/**",
    "LICENSE",
    "README.md"
  ]
}